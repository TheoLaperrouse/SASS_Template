{
  "name": "sass",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "back",
    "front"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/TheoLaperrouse/SASS_Template.git"
  },
  "scripts": {
    "dev": "concurrently -n \"BACK,FRONT\" -c \"bgBlue.bold,bgGreen.bold\" \"cd back && yarn dev\" \"cd front && yarn dev\"",
    "install:all": "cd back && yarn install && cd ../front && yarn install",
    "prepare": "husky install",
    "lint": "yarn workspace back lint && yarn workspace front lint",
    "lint:fix": "yarn workspace back lint:fix && yarn workspace front lint:fix",
    "format": "prettier --write \"**/*.{js,ts,vue,json,md}\""
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.2",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "semantic-release": "^25.0.2",
    "eslint": "^9.15.0",
    "prettier": "^3.2.5",
    "typescript-eslint": "^8.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "@eslint/js": "^9.15.0",
    "globals": "^15.12.0"
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ]
  }
}
